# Panic! At The Syslog - Docker Compose Configuration

# Database
DATABASE_URL=postgresql://panic:panic@postgres:5432/panic_syslog

# Message Bus (Kafka)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Kafka Topics (auto-created if needed)
KAFKA_TOPIC_RAW_SYSLOG=raw.syslog.v1
KAFKA_TOPIC_NORMALIZED=events.normalized.v1
KAFKA_TOPIC_FINDINGS=findings.realtime.v1
KAFKA_TOPIC_INSIGHTS=insights.recommendations.v1
KAFKA_TOPIC_DLQ_DETECTOR=dlq.detector.v1

# Kafka Consumer Groups
KAFKA_CONSUMER_GROUP_NORMALIZER=normalizer-cg
KAFKA_CONSUMER_GROUP_DETECTOR=detector-cg
KAFKA_CONSUMER_GROUP_ANALYZER=analyzer-cg

# Auth
PANIC_JWT_SECRET=change-this-to-a-real-secret-in-production

# LLM Provider (Tier 1 default)
PANIC_LLM_PROVIDER=ollama
PANIC_OLLAMA_BASE_URL=http://ollama:11434
PANIC_OLLAMA_MODEL=llama3:8b

# External LLM Plugin (disabled by default)
PANIC_OPENAI_PLUGIN_ENABLED=false
# PANIC_OPENAI_API_KEY=sk-...  # Only needed if plugin is enabled

# UI/API
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://api:8000
API_INTERNAL_TOKEN=dev-only-token-change-in-production

# UI
NEXT_PUBLIC_API_URL=http://localhost:8000

# Logging
PANIC_LOG_LEVEL=INFO
PANIC_ENV=dev

# Ingress
INGRESS_LISTEN_HOST=0.0.0.0
INGRESS_LISTEN_PORT_UDP=514
INGRESS_LISTEN_PORT_TCP=514
INGRESS_RATE_LIMIT_PER_SEC=5000.0
INGRESS_RATE_LIMIT_BURST=10000
